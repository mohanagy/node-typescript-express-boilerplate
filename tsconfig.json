{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "types": ["node"],
    "lib": ["es5", "es6", "ESNext", "ES2021"],
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": ["source/types/*", "./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@app/*": ["source/*"],
      "@bin/*": ["source/bin"],
      "@config/*": ["source/config/*"],
      "@controllers/*": ["source/controllers/*"],
      "@database/*": ["source/database/*"],
      "@models/*": ["source/database/models/*"],
      "@helpers/*": ["source/helpers/*"],
      "@interfaces/*": ["source/interfaces/*"],
      "@middleware/*": ["source/middleware/*"],
      "@routes/*": ["source/routes/*"],
      "@services/*": ["source/services/*"],
      "@triggers/*": ["source/triggers/*"],
      "@cTypes/*": ["source/types/*"],
      "@validations/*": ["source/validations/*"],
      "@config": ["source/config"],
      "@controllers": ["source/controllers"],
      "@database": ["source/database"],
      "@models": ["source/models"],
      "@helpers": ["source/helpers"],
      "@interfaces": ["source/interfaces"],
      "@middleware": ["source/middleware"],
      "@routes": ["source/routes"],
      "@services": ["source/services"],
      "@triggers": ["source/triggers"],
      "@cTypes": ["source/types"],
      "@validations": ["source/validations"]
    }
  },
  "include": ["./source/**/*"],
  "exclude": ["node_modules", "dist", ".nyc_output", ".coverage"],
  "parserOptions": {
    "debugLevel": true
  }
}
