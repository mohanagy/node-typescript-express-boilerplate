{
    "name": "node-typescript-express-boilerplate",
    "version": "0.0.1",
    "description": "Node.js + Typescript + Express.js Boilerplate",
    "main": "index.js",
    "scripts": {
        "test": "test",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "build": "npm run init && npm run tsc && tsc-alias",
        "dev": "nodemon --config nodemon.json source/bin/index.ts",
        "dev:debug": "nodemon --config nodemon.json --inspect-brk source/bin/index.ts",
        "start": "node build/bin/index.js",
        "init": "npm install",
        "tsc": "tsc",
        "tsc-lint": "tsc --noEmit"
    },
    "engines": {
        "node": "^16.13.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mohanagy/node-typescript-express-boilerplate.git"
    },
    "keywords": [
        "Node.js",
        "Express.js",
        "Typescript",
        "Express.js",
        "Boilerplate"
    ],
    "author": "Mohammed Naji",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/mohanagy/node-typescript-express-boilerplate/issues"
    },
    "homepage": "https://github.com/mohanagy/node-typescript-express-boilerplate#readme",
    "devDependencies": {
        "@babel/preset-typescript": "^7.16.7",
        "@tsconfig/node16": "^1.0.2",
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/debug": "^4.1.7",
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "eslint": "^8.13.0",
        "eslint-import-resolver-babel-module": "^5.3.1",
        "eslint-plugin-import": "^2.26.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.2",
        "ts-node": "^10.7.0",
        "tsc-alias": "^1.6.6",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "express": "^4.17.3",
        "http-status-codes": "^2.2.0",
        "morgan": "^1.10.0"
    }
}