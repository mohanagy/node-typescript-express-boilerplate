{
    "name": "node-typescript-express-boilerplate",
    "version": "0.0.1",
    "description": "Node.js + Typescript + Express.js Boilerplate",
    "main": "index.ts",
    "scripts": {
        "test": "test",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "watch": "tsc -w & node source/bin/index.ts",
        "build": "npm run init && npm run tsc",
        "start": "node build/bin/index.js",
        "init": "npm install",
        "tsc": "tsc",
        "tsc-lint": "tsc --noEmit"
    },
    "engines": {
        "node": "16.13.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mohanagy/node-typescript-express-boilerplate.git"
    },
    "keywords": [
        "Node.js",
        "Express.js",
        "Typescript",
        "Express.js",
        "Boilerplate"
    ],
    "author": "Mohammed Naji",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/mohanagy/node-typescript-express-boilerplate/issues"
    },
    "homepage": "https://github.com/mohanagy/node-typescript-express-boilerplate#readme",
    "devDependencies": {
        "@babel/preset-typescript": "^7.16.7",
        "@tsconfig/node16": "^1.0.2",
        "@types/express": "^4.17.13",
        "@types/node": "^17.0.23",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "eslint": "^8.13.0",
        "prettier": "^2.6.2",
        "ts-node": "^10.7.0",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3"
    },
    "dependencies": {
        "express": "^4.17.3"
    }
}